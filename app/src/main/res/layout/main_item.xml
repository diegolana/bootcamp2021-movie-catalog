<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="br.com.diegolana.bootcamp2021.MovieObj" />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="#000000">

            <ImageView
                android:id="@+id/imageViewMovie"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mv5bmdu2zwjlmjktmtrhmy00zta5lwezndgtymnm" />

            <TextView
                android:id="@+id/textViewMainHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Header"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageViewMovie"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageViewMovie"
                app:layout_constraintTop_toBottomOf="@+id/imageViewMovie"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
